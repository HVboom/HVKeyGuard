.container
  %h3.row
    = link_to 'HVboom', root_path, class: 'navbar-brand text-muted col-md-3'
    %span.offset-md-2.col-md-8.alert.alert-danger.text-center{role: 'alert'}
      = t('.disclaimer', default: 'Use at your own risk!')

  %nav.row.navbar.navbar-light.bg-light.navbar-expand-md.rounded.mb-3
    %button.navbar-toggler{'aria-controls': 'navbarContent', 'aria-expanded': 'false', 'aria-label': 'Toggle navigation', 'data-bs-target': '#navbarContent', 'data-bs-toggle': 'collapse', type: 'button'}
      %span.navbar-toggler-icon

    #navbarContent.collapse.navbar-collapse
      %ul.navbar-nav.nav-justified.text-md-center.w-100= render 'layouts/navigation_links'
