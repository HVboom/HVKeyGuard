db_connection: &db_connection
  mysql_username: <app>
  mysql_password: <db password>

development:
  secret_key_base: <rails secret>
  # DB connection
  mysql_db: <app>_development
  <<: *db_connection
  
  # Better errors
  trusted_ip: <list of ip's>

test:
  secret_key_base: <rails secret>
  # DB connection
  mysql_db: <app>_test
  <<: *db_connection
