secret_key_base: <rails secret>

# Encrypt `document`, if the user sets the `secured` flag
message_key: <SecureRandom.base58(32)>

# Access HVDigitalSafe, where the `document` is stored in a secure way
api_key: <provided by HVDigitalSafe application>
base_uri: https://<url to HVDigitalSafe application>

# DB connection
database:
  db: <app>_<environment>
  username: <app>
  password: <MySQL password>

# Better errors - development environment only
trusted_ip: <array of ip's>
